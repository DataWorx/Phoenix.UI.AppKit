@using Phoenix.UI.AppKit.Blazor.Theme
@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>

    <MudAppBar Elevation="0" Color="Color.Transparent">
        <MudIconButton Icon="@GetIcon()" Class="@(ThemeCss.PrimaryForeground)" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />

        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Class="@ThemeCss.PrimaryForeground" Edge="Edge.End" />
    </MudAppBar>
    <MudDrawer @bind-Open="drawerOpen">
        <MudDrawerHeader LinkToIndex="true">
            <MudText Typo="Typo.h5" Class="@ThemeCss.AddClasses("ml-2", ThemeCss.PrimaryForeground)">Phoenix</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="mt-8 px-8" MaxWidth="MaxWidth.False">
            @Body
        </MudContainer>
    </MudMainContent>

</MudLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
